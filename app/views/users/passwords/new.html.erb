<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2>Forgot your password?</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <% invalid = resource.errors.include?(:email) %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email,autofocus: true, autocomplete: "email", class: "form-control #{'is-invalid' if invalid}" %>
          <% if invalid %>
            <div class="invalid-feedback d-block">
              <% resource.errors.full_messages_for(:email).each do |error_message| %>
                <%= error_message %>.
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="actions">
          <%= f.submit "Send me reset password instructions",class:"btn btn-primary mt-4" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
