<div class="text-center">
  <% if @document.errors.any? %>
    <% @document.errors.full_messages.each do |message|%>\
      <h3><%= message %> </h3>
    <%end%>
  <%end%>
  <br>
  <%=form_with model: @document, local: true,html: {multipart: true} do |f|%>
    <%=f.label :Name%><br>
    <%=f.text_field :name%><br>
    <%=f.label :File%><br>
    <%=f.file_field :file%><br>
    <% if @document.file.attached? %>
      <p><strong>Current PDF File:</strong></p>
      <%= link_to "Download PDF", rails_blob_path(@document.file, disposition: "attachment") %>
    <% end %>
    <%=f.submit :Create%>
  <%end%>
  <%=link_to "Back_to_Document", documents_path%>
</div>
